#!/bin/sh
alias mkd="mkdir -pv"
alias mkdir="mkdir -pv"
alias rm="rm -vI"
alias mv="mv -vi"
alias cp="cp -vi"
alias ls="ls -xX --group-directories-first --color=auto -1"
alias la="ls -A"
alias ll="la -lh"
alias grep="grep --color=auto"
alias g="git"
alias gs="git status"
alias ga="git add"
alias gc="git commit"
alias gp="git push"
alias gd="git diff"
alias man="batman"
alias poweroff="sudo poweroff"
alias reboot="sudo reboot"
